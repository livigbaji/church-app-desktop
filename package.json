{
  "name": "church-admin",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && electron-builder",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "migration:create": "knex migrate:make migration_name -x ts",
    "migration:run": "typeorm-ts-node-esm migration:run -d src/main/datasource.ts",
    "migration:revert": "typeorm-ts-node-esm migration:revert -d src/main/datasource.ts",
    "migration:generate": "typeorm-ts-node-esm migration:generate src/main/migrations -d src/main/datasource.ts"
  },
  "dependencies": {
    "@electron/remote": "^2.1.2",
    "@react-icons/all-files": "^4.1.0",
    "@types/bootstrap": "^5.2.10",
    "better-sqlite3": "^9.4.3",
    "bootstrap": "^5.3.2",
    "date-fns": "^3.3.1",
    "knex": "^3.1.0",
    "objection": "^3.1.4",
    "react": "^18.2.0",
    "react-bootstrap": "^2.10.1",
    "react-dom": "^18.2.0",
    "react-icons": "^5.0.1",
    "reflect-metadata": "^0.2.1",
    "typeorm": "^0.3.20",
    "vite-tsconfig-paths": "^4.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.11.17",
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.6.0",
    "@typescript-eslint/parser": "^6.6.0",
    "@vitejs/plugin-react": "^4.0.4",
    "electron": "^26.1.0",
    "electron-builder": "^24.6.4",
    "eslint": "^8.48.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.2.2",
    "vite": "^4.4.9",
    "vite-plugin-electron": "^0.14.0",
    "vite-plugin-electron-renderer": "^0.14.5"
  },
  "main": "dist-electron/main.js"
}
